.space
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	margin auto
	display block
	max-height 100vh
	max-width 100vw

	&__bg
		position absolute
		top 0
		right 0
		left 0
		bottom 0
		max-height 100vh
		max-width 100vw
		overflow hidden

		&:before
			content ''
			position absolute
			top -20%
			right -20%
			left -20%
			bottom -20%
			background #161212 url(../images/bg.jpg) no-repeat center
			background-size cover
			animation bg1 140s infinite
			transform scale(0.8)

@keyframes bg1 {
	0% {
		transform: scale(0.8);
	}
	50% {
		transform: scale(1);
	}
	100% {
		transform: scale(0.8);
	}
}
